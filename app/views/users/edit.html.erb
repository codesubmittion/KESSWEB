<%= form_for(@user) do |f| %>
    <div class="field">
    <%= f.label :last_name_in_kanji %><br />
    <%= f.text_field :char_lastname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name_in_kanji %><br />
    <%= f.text_field :char_firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name_in_furigata %><br />
    <%= f.text_field :ruby_lastname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name_in_furigata %><br />
    <%= f.text_field :ruby_firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name_in_Latin_alphabet %><br />
    <%= f.text_field :lastname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name_in_Latin_alphabet %><br />
    <%= f.text_field :firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :faculty %><br />
    <%= f.select :faculty, [["Faculty of Letters", "Letters"],["Faculty of Economics ", "Economics"],["Faculty of Law", "Law"] ,["Faculty of Business and Commerce", "Business and Commerce"],["Faculty of Medicine", "Medicine"],["Faculty of Science and Technology", "Science and Technology"],["Faculty of Policy Management", "Policy Management"],["Faculty of Environment and Information Studies", "Environment and Information Studies"],["Faculty of Nursing and Medical Care", "Nursing and Medical Care"],["Faculty of Pharmacy", "Pharmacy"],["Correspondence Courses", "Correspondence Courses"],["Japanese Language Program", "Japanese Language Program"]] %>
  </div>

  <div class="field">
    <%= f.label :grade %><br />
    <%= f.select :grade, [["Freshman","1"],["Sophomore","2"],["Junior","3"],["Senior","4"]] %>
  </div>

  <div class="field">
    <%= f.label :home %><br />
    <%= f.select :home, [["Aoyama","Aoyama"],["Mita","Mita"],["Yokohama","Yokohama"]] %>
  </div>

  <div class="field">
    <%= f.label :section %><br />
    <%= f.select :section, [["Discussion","Discussion"],["Speech","Speech"],["Debate","Debate"],["Drama","Drama"]], :include_blank=>true %>
  </div>

  <div class="field">
    <%= f.label :authority %><br />
    <%= f.select :authority, [["Ordinary","Ordinary"],["Hiyoshi Committee","Hiyoshi Committee"],["Mita Committee","Mita Committee"],["Central Committee","Central Committee"]] %>
  </div>

   <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, [["Associate","Associate"],["Regular","Regular"],["Seceder","Seceder"],["Expelled","Expelled"],["Graduated","Graduated"]] %>
  </div>
    <%= f.submit "Update", class:"btn btn-sm btn-base-1 btn-danger mt-20" %>
<% end %>