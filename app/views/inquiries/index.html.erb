
<div class="container">
	<div class="row">
		<div class="col-lg-10 col-offset-2">
			<div class="page-header">
				<h1>Inquiry</h1>
			</div>
			<table class="table table-hover">
				<thead>
					<tr class="info">
						<th>From</th>
						<th>Email</th>
						<th>Content</th>
						<th>Sent at</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @inquiries.each do |inquiry| %>
						<tr>
							<th><%=inquiry.name %></th>
							<th><%=inquiry.email %></th>
							<th><%=inquiry.content %></th>
							<th><%=inquiry.created_at %></th>
							<th><%=link_to "delete", inquiry_path(inquiry), method: :delete, data:{confirm:"Are you sure?"}, :class=>"btn btn-danger btn-sm" %></th>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%= paginate @inquiries, class:"paginate" %>
		</div>
	</div>
</div>