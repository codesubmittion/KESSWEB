<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6  post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>Add Application</span>
              </h3>
            </div>

            <%= form_for(@post_application, url: post_applications_path) do |f| %>
              <% if @post_application.errors.any? %>
                <div id="error_explanation">
                  <ul>
                  <% @post_application.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <br>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">Target</label>
                    <%=f.label :Grade %><br/>
                    <%= f.select :target_grade,[["All","All"],["Freshmen","1"],["Sophomore","2"],["Junior","3"],["Senior","4"]]%><br/>
                     <%=f.label :Section %><br/>
                    <%= f.select :target_section,[["All","All"],["Discussion","Discussion"],["Debate","Debate"],["Speech","Speech"],["Drama","Drama"]]%><br/>
                      <%=f.label :Home %><br/>
                    <%= f.select :target_home,[["All","All"],["Aoyama","Aoyama"],["Mita","Mita"],["Yokohama","Yokohama"]]%><br/>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">Place</label>
                    <%= f.text_field :place, class:"form-control", placeholder:"Place" %>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group has-icon">
                    <label class="control-label">Date</label>
                    <%= f.datetime_select :date, class:"form-control"%>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group has-icon">
                    <label class="control-label">Deadline</label>
                    <%= f.datetime_select :deadline, class:"form-control"%>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_field :title, class:"form-control", rows:"3", placeholder:"Title" %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :comment, class:"form-control", rows:"3", placeholder:"Comment" %>
                </div>
              </div>
              <%= f.submit "Add", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-info" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>













