				<tbody>
					<% @post_blogs.each do |post_blog| %>
						<tr>
							<th><%= post_blog.title %></th>
							<th><%=post_blog.content %></th>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
