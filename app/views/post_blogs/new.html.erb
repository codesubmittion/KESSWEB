<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6  post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>Add Blog</span>
              </h3>
            </div>

            <%= form_for (@post_blog)do |f| %>
              <% if @post_blog.errors.any? %>
                <div id="error_explanation">
                  <ul class="alert alert-danger" role="alert">
                  <% @post_blog.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.attachment_field :image %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_field :category, class:"form-control", rows:"3", placeholder:"Category" %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_field :title, class:"form-control", rows:"3", placeholder:"Title" %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :content, class:"form-control", rows:"3", placeholder:"Comment" %>
                </div>
              </div>
              <%= f.submit "Add", data: {confirm:"Everyone in the world can read this blog. Are you sure?"}, class:"btn btn-lg btn-block btn-base-1 mt-20 btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>











